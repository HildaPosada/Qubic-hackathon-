# Environment Configuration for Qubic Smart Contract Studio

# Environment
ENVIRONMENT=development
DEBUG=true

# Mock Mode (set to true for demo without real API keys)
MOCK_MODE=true

# AI Configuration (Choose ONE provider)

# Option 1: Hugging Face (FREE Forever! - RECOMMENDED)
HUGGINGFACE_API_KEY=hf_your_token_here
AI_PROVIDER=huggingface
AI_MODEL=bigcode/starcoder

# Option 2: OpenAI (Free trial credits)
# OPENAI_API_KEY=sk_your_key_here
# AI_PROVIDER=openai
# AI_MODEL=gpt-3.5-turbo

# Option 3: Anthropic Claude (Free trial credits)
# ANTHROPIC_API_KEY=your-anthropic-key
# AI_PROVIDER=anthropic
# AI_MODEL=claude-3-opus-20240229

# AI Settings
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Qubic Configuration
QUBIC_RPC_URL=https://rpc.qubic.org
QUBIC_TESTNET_URL=https://testapi.qubic.org
QUBIC_NETWORK=testnet

# Database
DATABASE_URL=sqlite:///./qubic_studio.db

# Redis (Optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Security
SECRET_KEY=your-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
